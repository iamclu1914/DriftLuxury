      const price = parseFloat(flight.price?.grandTotal || '0');
      if (price < parseFloat(filters.price.min)) return false;
    }
    
    if (filters.price.max) {
      const price = parseFloat(flight.price?.grandTotal || '0');
      if (price > parseFloat(filters.price.max)) return false;
    }
    
    return true;
